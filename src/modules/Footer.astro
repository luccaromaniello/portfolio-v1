---
import { TextLink } from "@components/ui";
import { FooterLink } from "@components/content";
import {
  PROJECT_ODIN_LIVE_URL,
  PROJECT_PORTFOLIO_V0_URL,
  MAIL_URL,
  LINKEDIN_URL,
  GITHUB_URL,
} from "@constants";
import luccaIcon from "@assets/icons/lucca.png";
import { Image } from "astro:assets";

const workLinks = [
  {
    label: "The Odin Project",
    url: PROJECT_ODIN_LIVE_URL,
  },
];

const contactLinks = [
  {
    label: "GitHub",
    url: GITHUB_URL,
  },
  {
    label: "LinkedIn",
    url: LINKEDIN_URL,
  },
];

const timeMachineLinks = [
  {
    label: "Version 0",
    url: PROJECT_PORTFOLIO_V0_URL,
  },
];

const { class: className = "" } = Astro.props;
---

<footer
  class={`grid grid-cols-1 xl:grid-cols-2 gap-12 lg:gap-20 xl:gap-y-12 pb-12 md:py-24 text-content-secondary justify-between 2xl:pr-64 items-start font-light ${className}`}
>
  <div class="flex flex-col gap-4 xl:gap-10 items-center xl:items-start">
    <Image
      src={luccaIcon}
      alt="Lucca's illustration"
      class="w-14 h-14 rounded-full shadow-[1px_1px_0_0_#AE1E5F]"
    />
    <div class="flex flex-col">
      <p class="text-md md:text-lg text-center xl:text-start">
        If you have something in mind, feel free to reach out to me.
      </p>
      <div class="self-center xl:self-start">
        <TextLink link={{ label: MAIL_URL, url: MAIL_URL }} size="large" />
      </div>
    </div>
  </div>
  <div
    class="flex flex-col md:flex-row w-full xl:w-auto justify-between md:justify-start gap-8 md:gap-24"
  >
    <FooterLink title="Work" links={workLinks} />
    <FooterLink title="Contact" links={contactLinks} />
    <FooterLink title="Time Machine" links={timeMachineLinks} />
  </div>
  <div class="text-sm text-content-secondary text-center xl:text-start">
    <p>&copy 2025 Designed and coded by Lucca Romaniello.</p>
  </div>
</footer>
