---
import Section from "@components/content/Section.astro";
import ProjectCard from "@components/projects/ProjectCard.astro";
import { YZZO_LIVE_URL, YZZO_REPO_URL, NYX_REPO_URL } from "@constants";
import yzzoImage from "@assets/projects/yzzo-overview.png";
import nyxImage from "@assets/projects/nyx-dark.png";
---

<Section heading="Selected work">
  <div class="flex flex-col gap-12">
    <ProjectCard
      title="YZZO"
      description="A clipboard manager built for simplicity and productivity."
      website={{ href: YZZO_LIVE_URL, external: true, track: true }}
      repository={YZZO_REPO_URL}
      image={{
        src: yzzoImage,
        alt: "An overview of YZZO's clipboard manager.",
      }}
    />
    <ProjectCard
      title="Nyx"
      description="A theme for Zed code editor."
      repository={NYX_REPO_URL}
      image={{
        src: nyxImage,
        alt: "An overview of Nyx theme.",
      }}
    />
    <p class="text-lg text-center font-medium text-content-secondary">
      ðŸš§ More projects coming soon!
    </p>
  </div>
</Section>
