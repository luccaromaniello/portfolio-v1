---
import SectionHeading from "@components/typography/SectionHeading.astro";
import EducationExperience from "@components/content/EducationExperience.astro";
import { educationHistory } from "@data/educationData";
---

<section class="flex flex-col gap-4 items-center py-12 md:py-40">
  <SectionHeading title="Education" />
  <div class="flex flex-col gap-4 md:gap-8 lg:gap-12 px-2 lg:px-24 text-white">
    {
      educationHistory.map((experience) => (
        <EducationExperience experience={experience} />
      ))
    }
  </div>
</section>
