---
import githubIcon from "@assets/icons/github.svg";
import linkedinIcon from "@assets/icons/linkedin.svg";
import { Image } from "astro:assets";
import ButtonLink from "@components/ui/ButtonLink.astro";
import { MAIL_URL } from "@constants";
---

<div
  class="flex flex-row justify-between items-end fixed left-8 bottom-8 right-8 z-10"
>
  <div class="flex flex-col gap-4">
    <Image
      src={linkedinIcon}
      alt="LinkedIn Icon representation"
      class="w-6 h-6"
    />
    <Image src={githubIcon} alt="GitHub Icon representation" class="w-6 h-6" />
  </div>
  <ButtonLink label="Contact" href={MAIL_URL} />
</div>
