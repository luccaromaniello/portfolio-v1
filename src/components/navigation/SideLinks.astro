---
import ButtonLink from "@components/ui/ButtonLink.astro";
import { MAIL_URL } from "@constants";
import IconButton from "@components/ui/IconButton.astro";
---

<nav
  aria-label="Contact and social media links"
  class="hidden xl:flex flex-row justify-between items-end fixed left-8 bottom-8 right-8 z-10"
>
  <div class="flex flex-col gap-5">
    <IconButton icon="github" />
    <IconButton icon="linkedin" />
  </div>
  <ButtonLink label="Contact" href={MAIL_URL} />
</nav>
