---
import ButtonLink from "@components/ui/ButtonLink.astro";
import { Image } from "astro:assets";
import type { OdinProjectItem } from "@typeDefs/odinProject";
import ChipGroup from "@components/ui/ChipGroup.astro";
import TextLink from "@components/ui/TextLink.astro";

interface Props {
  project: OdinProjectItem;
}

const { project } = Astro.props;
---

<div class="grid grid-cols-1 gap-4 items-center">
  <div>
    {
      project.image && (
        <Image
          src={project.image.src}
          alt={project.image.alt}
          class="rounded-xl object-contain"
        />
      )
    }
  </div>
  <div class="flex flex-col gap-1 text-center xl:text-start">
    <h3 class="text-3xl md:text-lg font-medium text-white">
      {project.title}
    </h3>
    <p class="font-light text-content-secondary">
      {project.description}
    </p>
    <ChipGroup chips={project.tags} />
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
      <div class="justify-self-start">
        <TextLink link={{ label: "View project", url: project.website }} />
      </div>
      {
        project.repository && (
          <div class="justify-self-start">
            <TextLink
              link={{ label: "View repository", url: project.repository }}
            />
          </div>
        )
      }
    </div>
  </div>
  <!-- <ChipGroup chips={project.tags} /> -->
</div>
