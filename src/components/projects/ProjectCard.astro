---
import { Image } from "astro:assets";
import IconButton from "@components/ui/IconButton.astro";
import { ButtonLink } from "@components/ui";

interface Props {
  title: string;
  description: string;
  website?: {
    href: string;
    external?: boolean;
    track?: boolean;
  };
  repository?: string;
  image: {
    src: ImageMetadata;
    alt: string;
  };
  even?: boolean;
}

const { title, description, website, repository, image } = Astro.props;
---

<div
  class="grid grid-cols-1 gap-8 2xl:gap-0 min-h-[360px] items-center border-2 border-neutral-primary
  rounded-lg overflow-hidden bg-white"
>
  <div class="flex flex-col text-center xl:text-start">
    <div
      class="flex flex-row w-full gap-8 px-8 py-8 justify-between items-center"
    >
      <div class="flex flex-col gap-2">
        <div class="flex flex-row items-center justify-start">
          <h3 class="text-3xl md:text-3xl font-bold">
            {title}
          </h3>
          <IconButton icon="externalLink" size="xs" />
        </div>
        <p class="text-lg md:text-xl text-content-secondary text-balance">
          {description}
        </p>
      </div>
      <div class="flex gap-5 self-center">
        {
          website && (
            <ButtonLink
              icon="externalLink"
              label="Go to website"
              href={website.href}
              external={website.external}
              track={website.track}
            />
          )
        }
        {
          repository && (
            <ButtonLink
              icon="github"
              label="View repository"
              href={repository}
              external
            />
          )
        }
      </div>
    </div>

    <div class="xl:hidden overflow-hidden rounded-xl group">
      <div class="transition-transform duration-500 group-hover:scale-105">
        {image && <Image src={image.src} alt={image.alt} />}
      </div>
    </div>

    <div class="hidden xl:block overflow-hidden h-full">
      {
        image && (
          <Image
            src={image.src}
            alt={image.alt}
            class="h-full w-full object-cover"
          />
        )
      }
    </div>
  </div>
</div>
