---
import SectionHeading from "@components/typography/SectionHeading.astro";

interface Props {
  heading: string;
}

const { heading } = Astro.props;
---

<section class="flex flex-col gap-2 py-12 md:py-8 items-center">
  <SectionHeading title={heading} />
  <div class="flex flex-col gap-4 md:gap-8 2xl:gap-4 w-full">
    <slot />
  </div>
</section>
