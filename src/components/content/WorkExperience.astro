---
import Chip from "@components/ui/Chip.astro";
import TextLink from "@components/ui/TextLink.astro";
import { type ExperienceItem } from "@typeDefs/experience";

interface Props {
  experience: ExperienceItem;
}

const { experience } = Astro.props;
---

<div
  class={`flex flex-col sm:flex-row w-full justify-between py-8 sm:py-4 md:px-42 gap-4 sm:gap-12`}
>
  <div class="flex flex-col sm:flex-row gap-28">
    <div class="flex flex-col sm:basis-96 shrink-0 gap-1 uppercase">
      <p class="md:text-3xl font-light">{experience.location}</p>
      <p class="text-content-secondary md:text-lg">
        {experience.startDate} - {" "}
        {
          experience.current ? (
            <span class="text-white font-medium text-shadow-[2px_1px_0_#AE1E5F]">
              now
            </span>
          ) : (
            <span>{experience.endDate}</span>
          )
        }
      </p>
    </div>
    <div class="flex flex-col gap-2">
      <p>
        <span class="font-medium text-lg md:text-3xl uppercase"
          >{experience.role}
        </span>
      </p>
      <div>
        {
          experience.companies
            ?.map((company, i) => (
              <TextLink
                href={company.website ?? ""}
                label={company.name.trim()}
              />
            ))
            .reduce(
              (acc, curr, idx) => (idx === 0 ? [curr] : [...acc, ", ", curr]),
              [],
            )
        }
      </div>
      <p class="text-lg font-light text-content-secondary text-pretty">
        {experience.description}
      </p>
      <div class="flex flex-row flex-wrap items-start gap-3 py-2">
        {
          experience.technologies?.map((technology, i) => (
            <Chip label={technology} />
          ))
        }
      </div>
    </div>
  </div>
</div>
