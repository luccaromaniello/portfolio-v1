---
import Chip from "@components/ui/Chip.astro";
import TextLink from "@components/ui/TextLink.astro";
import { type ExperienceItem } from "@typeDefs/experience";

interface Props {
  experience: ExperienceItem;
}

const { experience } = Astro.props;
---

<div
  class={`flex flex-col sm:flex-row w-full justify-between py-8 sm:py-4 lg:px-42 gap-4 sm:gap-12`}
>
  <div class="flex flex-col lg:flex-row gap-4 lg:gap-28">
    <div
      class="flex flex-row lg:flex-col justify-between lg:justify-start lg:basis-96 shrink-0 gap-1 uppercase text-center"
    >
      <p class="text-sm md:text-lg lg:text-3xl font-light">
        {experience.location}
      </p>
      <p class="text-content-secondary text-sm md:text-lg lg:text-lg">
        {experience.startDate} - {" "}
        {
          experience.current ? (
            <span class="text-white font-medium text-shadow-[2px_1px_0_#AE1E5F]">
              now
            </span>
          ) : (
            <span>{experience.endDate}</span>
          )
        }
      </p>
    </div>
    <div class="flex flex-col gap-4 lg:gap-2">
      <div class="flex flex-col gap-1">
        <p>
          <span class="font-medium text-xl md:text-3xl uppercase"
            >{experience.role}
          </span>
        </p>
        <div>
          {
            experience.companies
              ?.map((company, i) => (
                <TextLink
                  href={company.website ?? ""}
                  label={company.name.trim()}
                />
              ))
              .reduce(
                (acc, curr, idx) => (idx === 0 ? [curr] : [...acc, ", ", curr]),
                [],
              )
          }
        </div>
      </div>
      <div class="flex flex-col gap-2">
        <p
          class="text-md md:text-lg font-light text-content-secondary text-pretty"
        >
          {experience.description}
        </p>
        <div class="flex flex-row flex-wrap items-start gap-3 py-2">
          {
            experience.technologies?.map((technology, i) => (
              <Chip label={technology} />
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>
