---
import ChipGroup from "@components/ui/ChipGroup.astro";
import TextLink from "@components/ui/TextLink.astro";
import { type ExperienceItem } from "@typeDefs/experience";

interface Props {
  experience: ExperienceItem;
}

const { experience } = Astro.props;
---

<div
  class="grid grid-cols-1 xl:grid-cols-[minmax(20%,144px)_1fr] 2xl:grid-cols-[minmax(20%,196px)_minmax(0,1024px)] py-4 gap-12"
>
  <div
    class="flex flex-row xl:flex-col justify-between xl:justify-start uppercase text-center xl:text-start pt-1"
  >
    <p class="text-sm md:text-sm font-light">
      {experience.location}
    </p>
    <p class="text-content-secondary text-sm md:text-sm">
      {experience.startDate}
      {
        experience.current ? (
          <>
            {" - "}
            <span class="text-white font-medium text-shadow-[2px_1px_0_#AE1E5F]">
              now
            </span>
          </>
        ) : (
          experience.endDate &&
          experience.endDate !== experience.startDate && (
            <>
              {" - "}
              <span>{experience.endDate}</span>
            </>
          )
        )
      }
    </p>
  </div>
  <div class={`flex flex-col ${experience.description && "gap-2"}`}>
    <div class="flex flex-wrap items-baseline">
      <span class="font-medium text-xl md:text-3xl lg:text-base uppercase"
        >{experience.title} â€”&nbsp;
      </span>
      {
        experience.companies && experience.companies.length > 0 && (
          <>
            {experience.companies?.map((company, i) => (
              <>
                <TextLink
                  link={{ label: company.name, url: company.website ?? "" }}
                  size="medium"
                />
                {i < experience.companies.length - 1 && <span>,&nbsp;</span>}
              </>
            ))}
          </>
        )
      }
    </div>
    <div class="flex flex-col gap-2">
      <p class="text-md font-light text-content-secondary text-pretty">
        {experience.description}
      </p>
      <ChipGroup chips={experience.technologies} />
    </div>
  </div>
</div>
