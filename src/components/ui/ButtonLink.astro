---
import { SOCIAL_ICONS } from "@constants";

interface Props {
  icon?: keyof typeof SOCIAL_ICONS;
  label: string;
  href: string;
  external?: boolean;
}

const { icon, label, href, external = true } = Astro.props;
const IconComponent = icon ? SOCIAL_ICONS[icon].icon : null;
---

<a
  href={href}
  aria-label={label}
  rel="noopener noreferrer"
  target={external ? "_blank" : "_self"}
  class="w-full md:w-auto inline-flex flex-row items-center gap-2 py-3 px-4 md:py-2 border-2 border-white
  rounded-sm shadow-[3px_3px_0_0_#AE1E5F] text-sm text-center
  text-white uppercase font-semibold hover:bg-white
  hover:text-black cursor-pointer"
>
  {IconComponent && <IconComponent class="w-4 h-4" />}
  {label}
</a>
